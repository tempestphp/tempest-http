{
    "name": "tempest/http",
    "description": "A package for handle HTTP requests and responses.",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^8.3",
        "tempest/core": "dev-main",
        "tempest/clock": "dev-main",
        "tempest/console": "dev-main",
        "tempest/view": "dev-main",
        "tempest/mapper": "dev-main",
        "tempest/container": "dev-main",
        "tempest/highlight": "^2.0",
        "laminas/laminas-diactoros": "^3.3",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "ramsey/uuid": "^4.7",
        "symfony/var-exporter": "^7.1"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Tempest\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tempest\\Http\\Tests\\": "tests"
        }
    }
}
